#include <stdio.h>
#include <stdlib.h>
#include <time.h>

#define TAM 5
#define NAVIOS 3
#define TENTATIVAS 10

void inicializarTabuleiro(char tabuleiro[TAM][TAM]) {
    for (int i = 0; i < TAM; i++)
        for (int j = 0; j < TAM; j++)
            tabuleiro[i][j] = '-';
}

void posicionarNavios(int navios[NAVIOS][2]) {
    int i = 0;
    while (i < NAVIOS) {
        int linha = rand() % TAM;
        int coluna = rand() % TAM;
        int repetido = 0;

        for (int j = 0; j < i; j++) {
            if (navios[j][0] == linha && navios[j][1] == coluna) {
                repetido = 1;
                break;
            }
        }

        if (!repetido) {
            navios[i][0] = linha;
            navios[i][1] = coluna;
            i++;
        }
    }
}

int verificarAcerto(int linha, int coluna, int navios[NAVIOS][2]) {
    for (int i = 0; i < NAVIOS; i++) {
        if (navios[i][0] == linha && navios[i][1] == coluna) {
            return 1;
        }
    }
    return 0;
}

void imprimirTabuleiro(char tabuleiro[TAM][TAM]) {
    printf("  0 1 2 3 4\n");
    for (int i = 0; i < TAM; i++) {
        printf("%d ", i);
        for (int j = 0; j < TAM; j++) {
            printf("%c ", tabuleiro[i][j]);
        }
        printf("\n");
    }
}

int main() {
    char tabuleiro[TAM][TAM];
    int navios[NAVIOS][2];
    int acertos = 0;

    srand(time(NULL));

    inicializarTabuleiro(tabuleiro);
    posicionarNavios(navios);

    printf("=== BATALHA NAVAL ===\n");

    for (int tentativa = 1; tentativa <= TENTATIVAS; tentativa++) {
        int linha, coluna;

        imprimirTabuleiro(tabuleiro);

        printf("\nTentativa %d de %d\n", tentativa, TENTATIVAS);
        printf("Informe a linha (0 a 4): ");
        scanf("%d", &linha);
        printf("Informe a coluna (0 a 4): ");
        scanf("%d", &coluna);

        if (linha < 0 || linha >= TAM || coluna < 0 || coluna >= TAM) {
            printf("Coordenada invÃ¡lida!\n");
            tentativa--;
            continue;
        }

        if (tabuleiro[linha][coluna] != '-') {
            printf("VocÃª jÃ¡ atirou aqui!\n");
            tentativa--;
            continue;
        }

        if (verificarAcerto(linha, coluna, navios)) {
            printf("ğŸ’¥ Acertou um navio!\n");
            tabuleiro[linha][coluna] = 'X';
            acertos++;
        } else {
            printf("ğŸŒŠ Errou!\n");
            tabuleiro[linha][coluna] = 'O';
        }

        if (acertos == NAVIOS) {
            printf("\nğŸ† ParabÃ©ns! VocÃª afundou todos os navios!\n");
            break;
        }
    }

    if (acertos < NAVIOS) {
        printf("\nğŸ’€ Fim de jogo. VocÃª nÃ£o afundou todos os navios.\n");
        printf("As posiÃ§Ãµes dos navios eram:\n");
        for (int i = 0; i < NAVIOS; i++) {
            printf("- Navio %d: Linha %d, Coluna %d\n", i + 1, navios[i][0], navios[i][1]);
        }
    }

    printf("\nTabuleiro final:\n");
    imprimirTabuleiro(tabuleiro);

    return 0;
}
